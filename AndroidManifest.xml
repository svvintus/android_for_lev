<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taxiforall"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.example.taxiforall.TaxiForAll"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.activities.ChooseMode"
            android:label="@string/app_name"
            android:parentActivityName="com.example.taxiforall.TaxiForAll" >
        </activity>
        <activity
            android:name="com.activities.DriveMode"
            android:label="@string/app_name"
            android:parentActivityName="com.activities.ChooseMode" >
        </activity>
        <activity
            android:name="com.activities.PassengerMode"
            android:label="@string/app_name"
            android:parentActivityName="com.activities.ChooseMode" >
        </activity>
        <activity
            android:name="com.activities.MapPane"
            android:label="@string/title_activity_map"
            android:parentActivityName="com.activities.PassengerMode" >
        </activity>
    </application>

</manifest>
